NMS_DB_HOST=127.0.0.1
NMS_DB_PORT=3306
NMS_DB_USER=nms_user
NMS_DB_PASS=changeme
NMS_DB_NAME=nms_database

NMS_HG_PATH="path to your NMS saves"
NMSSAVETOOL="path to NMS-Save-Decoder-main nmssavetool.py tool"

USE_MTIME=1
INVFP_ENABLED=1

INITIAL_TABLE=nms_initial_items
LEDGER_TABLE=nms_ledger_deltas

ICON_CACHE_DIR=cache/icons
ICON_CACHE_RETENTION_DAYS=60
ICON_CACHE_BROWSER_MAX_AGE=2592000

# --- Watcher options --------------------------------------------------
# Which save file to watch under $NMS_SAVE_ROOT/$NMS_PROFILE
NMS_WATCH_FILE=save2.hg

# Debounce to coalesce rapid duplicate events (seconds)
NMS_WATCH_DEBOUNCE=3

# Startup gate: ignore events for the first N seconds after watcher starts
# (Use this to avoid 2×–4× decode bursts when NMS boots to main menu)
NMS_WATCH_STARTUP_DELAY=60
